{
  "manifest_version": 2,

  "name": "chrome-stream",
  "description": "launches the current stream using livestreamer",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
   "background": {
    "scripts": ["native-app-trigger.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "nativeMessaging"
  ]
}
